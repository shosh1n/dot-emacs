;;; init-vterm .el  --- Working with crontab -*- lexical-binding: t -*-
;;; Commentary:
;;; Code:
(use-package vterm
  :defer t
  :straight (:build t)
  :config
  (add-to-list 'display-buffer-alist
               '("\\*vterm\\*"
                 (display-buffer-below-selected)
                 (window-height . 0.3)))
  )
(provide 'init-vterm )

;;; init-vterm .el ends here
